<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TravelTrekker</title>
</head>

<body>

    <h1>List of Destinations</h1>

    <!-- Form to navigate to the page for creating a new listing -->
    <form action="/listings/new" method="GET">
        <button type="submit">Create new list</button>
    </form>

    <!-- Unordered list of all destinations -->
    <ul>
        <% allListOfDestination.forEach(destination=> { %>
            <li>
                <!-- Link to the detail page of each destination -->
                <a href="/listings/<%= destination._id %>">
                    <%= destination.title %>
                </a>
            </li>
            <% }); %>
    </ul>

</body>

</html>