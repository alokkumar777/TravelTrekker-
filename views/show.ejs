<% layout('layouts/boilerplate.ejs') -%>
<body>
  <h3>Detail:</h3>

  <!-- Display listing details in an unordered list -->
  <ul>
    <li>
      <!-- Display the listing's title -->
      <%= listing.title %>
    </li>
    <li>
      <!-- Display the listing's description -->
      <%= listing.description %>
    </li>
    <li>
      <!-- Display the listing's price formatted in Indian Rupees -->
      &#8377;<%= listing.price ? listing.price.toLocaleString('en-IN') : 'N/A'
      %>
    </li>
    <li>
      <!-- Display the listing's location -->
      <%= listing.location %>
    </li>
    <li>
      <!-- Display the listing's country -->
      <%= listing.country %>
    </li>
  </ul>

  <!-- Link to edit the current listing -->
  <a href="/listings/<%= listing._id %>/edit">Edit this listing</a>
  
  <!-- Delete form -->
  <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete</button>
  </form>
</body>